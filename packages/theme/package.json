{
  "name": "@nextdevx/theme",
  "version": "0.1.0",
  "description": "Theme provider with light/dark/system modes and optional DB persistence",
  "license": "MIT",
  "author": "Dylan van Iersel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/applab-nl/next-components.git",
    "directory": "packages/theme"
  },
  "homepage": "https://github.com/applab-nl/next-components/tree/main/packages/theme#readme",
  "bugs": {
    "url": "https://github.com/applab-nl/next-components/issues"
  },
  "keywords": ["nextjs", "react", "theme", "dark-mode", "light-mode", "theme-provider"],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist .turbo"
  },
  "peerDependencies": {
    "lucide-react": ">=0.300.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.4",
    "lucide-react": "^0.469.0",
    "react": "^19.0.0",
    "typescript": "^5.7.3"
  }
