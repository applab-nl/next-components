{
  "name": "@nextdevx/core",
  "version": "0.2.2",
  "description": "Core utilities, auth adapters, and configuration for @nextdevx packages",
  "license": "MIT",
  "author": "Dylan van Iersel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/applab-nl/next-components.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/applab-nl/next-components/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/applab-nl/next-components/issues"
  },
  "keywords": [
    "nextjs",
    "react",
    "auth",
    "adapter",
    "supabase",
    "clerk",
    "next-auth"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./auth/supabase": {
      "types": "./dist/auth/adapters/supabase.d.ts",
      "import": "./dist/auth/adapters/supabase.js"
    },
    "./auth/clerk": {
      "types": "./dist/auth/adapters/clerk.d.ts",
      "import": "./dist/auth/adapters/clerk.js"
    },
    "./auth/next-auth": {
      "types": "./dist/auth/adapters/next-auth.d.ts",
      "import": "./dist/auth/adapters/next-auth.js"
    },
    "./element-picker": {
      "types": "./dist/element-picker/index.d.ts",
      "import": "./dist/element-picker/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist .turbo"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0",
    "lucide-react": ">=0.300.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@supabase/supabase-js": {
      "optional": true
    },
    "@clerk/nextjs": {
      "optional": true
    },
    "next-auth": {
      "optional": true
    },
    "lucide-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@prisma/client": "^6.2.1",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "lucide-react": "^0.469.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3"
  }
}
