{
  "name": "@nextdevx/devtools",
  "version": "0.2.2",
  "description": "Developer experience tools - dev mode indicator, dev-login page",
  "license": "MIT",
  "author": "Dylan van Iersel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/applab-nl/next-components.git",
    "directory": "packages/devtools"
  },
  "homepage": "https://github.com/applab-nl/next-components/tree/main/packages/devtools#readme",
  "bugs": {
    "url": "https://github.com/applab-nl/next-components/issues"
  },
  "keywords": [
    "nextjs",
    "react",
    "devtools",
    "development",
    "debugging",
    "element-picker"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@nextdevx/core": "^0.2.0"
  },
  "peerDependencies": {
    "lucide-react": ">=0.300.0",
    "next": ">=14.0.0",
    "next-intl": ">=3.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next-intl": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "lucide-react": "^0.469.0",
    "next": "^15.1.4",
    "next-intl": "^3.26.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3"
  }
}
